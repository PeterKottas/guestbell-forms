{
  "compilerOptions": {
    "outDir": "../../build",
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "declaration": true,
    "lib": ["es7", "dom"],
    "types": ["node"]
  },
  "exclude": ["bin", "node_modules"]
}
